<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lessons.vs.petersonapps.weatherforecast.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<android.support.design.widget.TextInputLayout
    android:id="@+id/city_search_et"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.7"
    android:hint="@string/enter_city">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"/>
</android.support.design.widget.TextInputLayout>

       <!-- <EditText
            android:id="@+id/city_search_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/d8"
            android:layout_weight="0.7"
            android:background="@android:color/transparent"
            android:hint="@string/enter_city"
            android:textSize="10pt" />-->

        <ImageButton
            android:id="@+id/city_search_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/d8"
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_search_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/city_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d8"
            android:text="City"
            android:textSize="@dimen/pt14"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/temperature_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d8"
            android:text="0 Â°C"
            android:textSize="@dimen/pt14"
            android:textAlignment="viewEnd"
            android:layout_weight="3"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pt70"
            android:src="@drawable/few_clouds" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weather_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d8"
            android:text="Weather"
            android:textSize="@dimen/pt10"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/d8"
            android:text="Clouds"
            android:textSize="@dimen/pt10" />

        <TextView
            android:id="@+id/clouds_percent_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/d8"
            android:text="0 %"
            android:textSize="@dimen/pt8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d8"
            android:text="Wind"
            android:textSize="@dimen/pt10"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/wind_speed_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d8"
            android:text="0 m/s"
            android:textSize="@dimen/pt8"
            android:layout_weight="3"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>
